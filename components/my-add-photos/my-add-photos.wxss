.my-add-photos .photo-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.my-add-photos .photo-box .img-box {
  width: 32%;
  height: 160rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.my-add-photos .photo-box .img-box .img {
  width: 100%;
  height: 100%;
}
.my-add-photos .photo-box .img-box .close-box {
  width: 28rpx;
  height: 28rpx;
  line-height: 20rpx;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 12px;
  color: #fff;
  background-color: rgba(16, 16, 16, 0.5);
}
.my-add-photos .photo-box .add-photo {
  width: 32%;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #f2f2f2;
}
